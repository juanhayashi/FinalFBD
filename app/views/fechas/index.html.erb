<h1>Listing fechas</h1>

<table>
  <thead>
    <tr>
      <th style="background-color:#5D9F07">Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fechas.each do |fecha| %>
      <tr>
        <td><%= fecha.fecha %></td>
        <td><%= link_to 'Ver', fecha %></td>
        <td><%= link_to 'Editar', edit_fecha_path(fecha) %></td>
        <td><%= link_to 'Destruir', fecha, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fecha', new_fecha_path %>
